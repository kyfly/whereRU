{
  "name": "Race",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "imgUrl": {
      "type": "string",
      "required": true
    },
    "authorName": {
      "type": "string"
    },
    "authorId": {
      "type": "string"
    },
    "deleted": {
      "type": "boolean",
      "required": false
    },
    "explainUrl": {
      "type": "string",
      "required": true
    },
    "started": {
      "type": "date",
      "required": true
    },
    "school": {
      "type": "string"
    },
    "ended": {
      "type": "date",
      "required": true
    },
    "created": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "raceTeams": {
      "type": "hasAndBelongsToMany",
      "model": "Team"
    },
    "materials": {
      "type": "hasMany",
      "model": "Material"
    },
    "notices": {
      "type": "hasMany",
      "model": "Notice"
    },
    "team": {
      "type": "belongsTo",
      "model": "Team"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "search"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getMySchoolRaces"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__notices"
    },
    {
      "principalType": "ROLE",
      "principalId": "teamOwner",
      "permission": "ALLOW",
      "property": "__create__notices"
    },
    {
      "principalType": "ROLE",
      "principalId": "teamOwner",
      "permission": "ALLOW",
      "property": "__updateById__notices"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__get__raceTeams"
    },
    {
      "principalType": "ROLE",
      "principalId": "teamOwner",
      "permission": "ALLOW",
      "property": "__unlink__raceTeams"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__materials"
    },
    {
      "principalType": "ROLE",
      "principalId": "teamOwner",
      "permission": "ALLOW",
      "property": "__updateById__materials"
    },
    {
      "principalType": "ROLE",
      "principalId": "teamOwner",
      "permission": "ALLOW",
      "property": "__destroyById__materials"
    },
    {
      "principalType": "ROLE",
      "principalId": "teamOwner",
      "permission": "ALLOW",
      "property": "__create__materials"
    }
  ],
  "methods": {},
  "scope": {
    "include": {
      "relation": "team",
      "scope": {
        "fields": ["id", "name", "logoUrl"]
      }
    }
  }
}

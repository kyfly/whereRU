    "title": {
      "type": "string",
      "required": true
    },
    "authorName": {
      "type": "string",
      "required": true
    },
    "authorId": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "comment": "区分校园社团和兴趣社团的活动"
    },
    "imgUrl": {
      "type": "string",
      "required": true
    },
    "explainUrl": {
      "type": "string"
    },
    "verifyRule": {
      "type": "string"
    },
    "created": {
      "type": "date"
    },
    "deleted": {
      "type": "boolean",
      "default": false
    },
    "school": {
      "type": "string",
      "required": true
    },
    "updated": {
      "type": "date"
    },
    "started": {
      "type": "date",
      "required": true
    },
    "actType": {
      "type": "string",
      "default": "common"
    },
    "ended": {
      "type": "date",
      "required": true
    },
    "keyword": {
      "type": "string"
    },
    "hidden": {
      "type": "boolean",
      "default": false
    },
    "issue": {
      "type": "boolean",
      "default": false
    },
    "readers": {
      "type": "number",
      "default": 0
    }

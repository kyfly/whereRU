{
  "name": "Article",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "contentUrl": {
      "type": "string",
      "required": true
    },
    "created": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "readers": {
      "type": "hasMany",
      "model": "Reader",
      "comments": "浏览量"
    },
    "likeUser": {
      "type": "hasMany",
      "model": "LikeUser",
      "comments": "点赞量"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "comments": "评论"
    },
    "coterie": {
      "type": "belongsTo",
      "model": "Coterie"
    },
    "team": {
      "type": "belongsTo",
      "model": "Team"
    },
    "user": {
      "type": "belongsTo",
      "model": "whereRUUser"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__create__readers"
    }
  ],
  "methods": {},
  "scope": {
    "include": {
      "relation": "user",
      "scope": {
        "fields": ["id", "name", "headImgUrl", "sign"]
      }
    }
  }
}

{
  "name": "Comment",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "content": {
      "type": "string"
    },
    "created": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "articles": {
      "type": "belongsTo",
      "model": "Article"
    },
    "replys": {
      "type": "hasMany",
      "model": "Reply"
    },
    "user": {
      "type": "belongsTo",
      "model": "whereRUUser"
    }
  },
  "acls": [],
  "methods": {},
  "scope": {
    "include": {
      "relation": "user",
      "scope": {
        "fields": ["id", "name", "headImgUrl", "sign"]
      }
    }
  }
}

{
  "name": "Comment",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "content": {
      "type": "string",
      "required": true
    },
    "created": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "articles": {
      "type": "belongsTo",
      "model": "Article"
    },
    "replys": {
      "type": "hasMany",
      "model": "Reply"
    },
    "user": {
      "type": "belongsTo",
      "model": "whereRUUser"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__replys"
    }
  ],
  "methods": {},
  "scope": {
    "include": {
      "relation": "user",
      "scope": {
        "fields": ["id", "name", "headImgUrl", "sign"]
      }
    }
  }
}
